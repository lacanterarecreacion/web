---
import Layout from "@/layouts/Layout.astro";
import { useSanityClient } from "astro-sanity";
const noticias = await useSanityClient().fetch(`*[_type == "noticias"]`);
import PlaceholderImage from "@/components/PlaceholderImage/SanityPlaceholderImage.astro";
import type { Post } from "@/src/types/interfaces";
import GrainOne from "@/components/Grain/GrainOne.astro";
---

<Layout title="Noticias">
  <div
    class="relative flex items-center justify-center py-24 bg-indigo-600 md:py-12 bg-gradient-to-tr from-red-400"
  >
    <h1 class="relative font-mono text-4xl text-white md:text-6xl">Noticias</h1>
    <div class="absolute inset-0 z-0 opacity-90">
      <GrainOne />
    </div>
  </div>
  {
    noticias && (
      <div class="grid w-full gap-6 px-3 pb-24 mx-auto mt-12 md:px-0 max-w-7xl lg:grid-cols-3">
        {noticias.map((post: Post) => (
          <a href={`/noticias/${post.slug?.current}`} class="overflow-hidden duration-500 rounded-lg shadow-md bg-gray-50 hover:shadow-2xl">
            {post.mainImage ? (
              <PlaceholderImage
                title={post.title}
                width={500}
                height={250}
                image={post.mainImage}
              />
            ) : (
              <div class="h-64 bg-gray-100" />
            )}
            <h2 class="p-3 font-mono text-lg">{post.title}</h2>
          </a>
        ))}
      </div>
    )
  }
</Layout>
