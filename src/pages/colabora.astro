---
import Layout from "../layouts/Layout.astro";
import HeroColabora from "@/modules/Colabora/HeroColabora.astro";
import PageSections from "@/modules/Colabora/PageSections.astro";
import { useSanityClient } from "astro-sanity";
import PageSectionsPlugs from "@/components/PortableText/PageSectionsPlugs.astro";
const colabora = await useSanityClient().fetch(
  `*[_type == "colabora"]  | order(publishedAt desc) [0]`
);
---

<Layout title="Colabora">
  <HeroColabora />
  <PageSections>
    <PageSectionsPlugs content={colabora.content} />
  </PageSections>
</Layout>


<style is:global>
  .colabora #headroom {
    @apply border-b-blue-600  border-t-transparent bg-blue-50/90 backdrop-blur-sm !important;
  }
  .colabora #menuOffcanvas {
    @apply ring-blue-400;
  }

  .colabora .active {
    @apply text-blue-600
  }
</style>