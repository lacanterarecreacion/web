---
import Layout from "@/src/layouts/Layout.astro";
import InstitucionalQueHacemos from "@/src/modules/Institucional/InstitucionalQueHacemos.astro";
import InstitucionalQuienesSomos from "@/src/modules/Institucional/InstitucionalQuienesSomos.astro";
import LaCanteraHero from "@/src/modules/Institucional/LaCanteraHero.astro";
---

<Layout title="Sobre cantera">
  <LaCanteraHero />
  <div class="relative z-10 bg-white">
    <InstitucionalQuienesSomos />
    <div
      style="background-image:url('https://cdn.sanity.io/images/1ekf84ne/production/53537aa7a0d385ea37c76a488b8125ccdaf61a28-4080x3060.jpg?w=1300')"
      class="flex bg-indigo-600 justify-center items-center py-40 w-full mt-4 relative overflow-hidden bg-fixed"
    >
      <a href="/quienes-somos/nuestra-historia" class="btn yellow relative z-20">
        Conoc√© nuestra historia
      </a>
      <div class="absolute inset-0 z-0 bg-gradient-to-br from-indigo-800/90 to-indigo-800/90"/>
    </div>
  </div>
</Layout>

<style is:global>
  .prose p,
  .prose ul {
    @apply my-6 block mx-auto max-w-3xl;
  }

  .prose img {
    @apply my-0;
  }
</style>
