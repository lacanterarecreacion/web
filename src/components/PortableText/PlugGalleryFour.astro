<div class="grid grid-cols-2 bg-indigo-200">
{
  props.images.imagesGallery.map((i: any) => {
    return (
      <a
        class=" glightbox"
        href={urlForImage(i.asset).width(1300).url()}
      >
        <img
          class="object-cover w-full overflow-hidden h-64"
