---
import IconRollingDice from "@/components/Icons/IconRollingDice.astro";

const routes = [
  "/institucional/quienes-somos",
  "/institucional/nuestra-historia",
  "/que-hacemos",
  "/colabora",
  "/calendario-ludico",
  "/",
  "/que-hacemos/",
  "/recursos/",
  "/contacto/",
];


const currentRoute = new URL(Astro.request.url).pathname;
const validRoutes = routes.filter((item: any) => item !== currentRoute);

function getRandomRoute(min: number, max: number) {
  const randomIndex = Math.floor(Math.random() * (max - min + 1));
  return routes[randomIndex];
}
const randomRoute = getRandomRoute(0, validRoutes.length);

---

<a 
  href={randomRoute}
