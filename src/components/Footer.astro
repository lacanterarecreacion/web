---
import { Image } from "@astrojs/image/components";
import LogoXl from "./Icons/Logo-xl.astro";
---

<div class="pt-24 bg-gray-100 sm:pt-0">
  <footer class="p-4 bg-white sm:p-6">
    <div
      class="flex flex-col items-center justify-center w-full max-w-6xl pt-6 mx-auto"
    >
      <div class="flex justify-center items-center w-full gap-8 text-center  sm:gap-6">
        <div class="grid gap-5 text-left sm:grid-cols-2">
          <div>
            <h2 class="mb-6 text-lg font-semibold text-gray-900 uppercase">
              Seguinos
            </h2>
            <ul class="text-gray-600">
              <li class="py-3 text-lg md:py-0 md:pb-3">
                <a
                  target="_blank"
                  rel="noopener noreferrer"
                  href="https://www.instagram.com/lacantera.recreacion/"
                  class="transition duration-150 ease-in-out hover:text-accents-6 hover:font-bold"
                  >Instagram</a
                >
              </li>
              <li class="py-3 text-lg md:py-0 md:pb-3">
                <a
                  target="_blank"
                  rel="noopener noreferrer"
                  href="https://es-la.facebook.com/LaCanteraRecreacion/"
                  class="transition duration-150 ease-in-out hover:text-accents-6 hover:font-bold"
                  >Facebook</a
                >
              </li>
              <li class="py-3 text-lg md:py-0 md:pb-3">
                <a
                  target="_blank"
                  rel="noopener noreferrer"
                  href="https://www.youtube.com/channel/UCgyRMwOrJ8zKayunSI6pMGA"
                  class="transition duration-150 ease-in-out hover:text-accents-6 hover:font-bold"
                  >Youtube</a
                >
              </li>
            </ul>
          </div>
          <div>
            <h2 class="mb-6 text-lg font-semibold text-gray-900 uppercase">
              La Cantera Recreación
            </h2>
            <ul class="text-gray-600">
              <li class="py-3 text-lg md:py-0 md:pb-3">
                <a
                  href="/tramas"
                  class="transition duration-150 ease-in-out hover:text-accents-6 hover:font-bold"
                  >Sobre Cantera</a
                >
              </li>
              
            </ul>
          </div>
        </div>
      </div>
    </div>
  </footer>
  <hr class="my-6 border-gray-200 sm:mx-auto lg:my-8" />
  <div class="sm:flex sm:items-center sm:justify-center">
    <span class="text-sm text-gray-500 sm:text-center"
      >© 2022 Cantera. Todos los derechos reservados.
    </span>
  </div>
</div>
