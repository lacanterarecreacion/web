---
import { Image } from "@astrojs/image/components";
import FooterNavigation from "@/components/Navigation/FooterNavigation.astro";
import LogoCantera from "./Icons/LogoCantera.astro";
---

<div class="pt-24 bg-white relative z-30 sm:pt-0">
  <footer class="p-4 bg-white sm:p-6">
    <div class="flex flex-col items-center justify-center w-full pt-6 mx-auto">
      <div
        class="flex justify-center max-w-7xl flex-col items-center w-full gap-8 text-center sm:gap-6"
      >
        <div class="mt-8 mx-auto md:ml-auto">
          <FooterNavigation />
        </div>
        <div class="flex flex-col justify-center items-center h-full">
          <div class="mx-auto">
            <Image
              src="/LogoCantera.png"
              class="object-cover w-full h-32 mt-12"
              alt="La Cantera Recreación"
              loading="eager"
              width={181}
              height={136}
            />
          </div>
          <div
            class="flex-col items-start justify-center gap-2 pt-1 ml-2 flex md:ml-4"
          >
            <LogoCantera />
            <p class="font-mono text-center">
              Proyectos en el campo <br />de la recreación
            </p>
          </div>
        </div>
      </div>
    </div>
  </footer>
  <div
    class="sm:flex sm:items-center gap-6 sm:justify-center py-6 text-sm text-gray-800 font-sans sm:text-center"
  >
    <span>©{new Date().getFullYear()} Cantera</span>
    <a href="https://github.com/lacanterarecreacion/web" target="_blank">
      Repositorio
    </a>
  </div>
</div>
