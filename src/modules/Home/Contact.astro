---
import IconFacebook from "@/components/Icons/IconFacebook.astro";
import IconInstagram from "@/components/Icons/IconInstagram.astro";
import IconYoutube from "@/components/Icons/IconYoutube.astro";
import GrainOne from "@/components/UI/Grain/GrainOne.astro";
import EnterateModal from "@/components/Modal/EnterateModal";
import BlobScene from "@/components/UI/Backgrounds/BlobScene.astro";
---

<div
  id="contacto"
  class="relative z-10 flex flex-col items-center justify-center w-full px-6 py-32 mx-auto overflow-hidden font-mono text-left md:px-0 bg-gradient-to-br from-cyan-500 to-yellow-500"
>
  <div
    class="relative overflow-hidden z-30 w-full max-w-lg animate__fadeIn animate__animated mx-auto text-center bg-white rounded-lg shadow-lg"
  >
    <h2
      class="w-full md:w-96 mx-auto font-mono py-8 text-2xl font-bold tracking-wide text-center text-transparent bg-clip-text bg-gradient-to-br from-teal-600 via-60% via-emerald-500 to-teal-300 md:text-5xl"
    >
      ¿Jugámos?
    </h2>
    <div class="bg-gray-100 py-6 flex flex-col gap-3 w-full">
      <h3
        class="w-full mx-auto font-mono text-lg text-center font-bold text-emerald-800"
      >
        Contactanos vía mail
      </h3>
      <div class="relative text-gray-800">
        <p class="w-full text-sm text-center break-words select-all md:text-lg">
          lacantera.recreacion@gmail.com
        </p>
      </div>
    </div>
    <div class="py-6 flex flex-col gap-3 w-full">
      <h3
        class="w-full mx-auto font-mono font-bold text-lg text-center text-emerald-800"
      >
        En nuestras redes sociales.
      </h3>
      <div class="flex items-center justify-center gap-3">
        <a
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Ir a facebook de La Cantera Recreación"
          class="w-12 h-12 hover:opacity-80 group"
          href="https://es-la.facebook.com/LaCanteraRecreacion/"
        >
          <IconFacebook class="text-lg" />
        </a>
        <a
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Ir a Instagram de La Cantera Recreación"
          class="w-10 h-10 hover:opacity-80 group"
          href="https://www.instagram.com/lacantera.recreacion/"
        >
          <IconInstagram />
        </a>
        <a
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Ir a youtube de La Cantera Recreación"
          class="w-12 h-12 hover:opacity-80 group"
          href="https://www.youtube.com/channel/UCgyRMwOrJ8zKayunSI6pMGA"
        >
          <IconYoutube />
        </a>
      </div>
    </div>
    <div class="bg-gray-100 pb-12 py-6 flex flex-col gap-3 w-full">
      <h3
        class="w-full mx-auto font-mono font-bold text-lg text-center text-emerald-800"
      >
        Sumate a nuestro newsletter.
      </h3>
      <div class="scale-125">
        <EnterateModal client:load />
      </div>
    </div>
  </div>
  <div class="absolute inset-0 z-20 w-full h-screen opacity-90">
    <div class="absolute inset-0 z-10 w-full min-h-screen overflow-hidden">
      <GrainOne />
    </div>
    <div
      class="absolute inset-0 z-0 w-full min-h-screen overflow-hidden rotate-180"
    >
      <BlobScene />
    </div>
  </div>
</div>
