---
import CarouselHome from "@/components/Carousel/CarouselHome.astro";
import { useSanityClient } from "astro-sanity";

const QUE_HACEMOS = await useSanityClient().fetch(
  `*[_type == "home_page"][0]`
);

---

<div
  class="relative z-30 flex-col overflow-hidden gap-12 w-full flex items-center justify-center border-white border-y-4 bg-white"
>
  <h2
    class="z-20 font-hand w-full text-center  text-blue-900 text-5xl md:text-7xl pt-24 intersectionAnimation"
  >
    {QUE_HACEMOS.title}
  </h2>
  <p class="text-gray-900 text-2xl w-full relative z-20 px-6 font-sans max-w-3xl mx-auto text-center">
    {QUE_HACEMOS.description}
  </p>
  <a
    href="/quienes-somos/la-cantera"
    class="btn blue z-20 relative intersectionAnimation"
  >
    {QUE_HACEMOS.buttonText}
  </a>
  <div class="w-full relative z-20 -mx-0 py-6">
    <CarouselHome
      images={QUE_HACEMOS.gallery.imagesGallery}
    />
  </div>
  <div class="absolute inset-0 z-0 opacity-90 bg-gradient-to-b to-transparent  via-60% via-white/90 from-white">
  </div>
</div>
