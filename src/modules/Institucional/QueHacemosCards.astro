import { useSanityClient } from "astro-sanity";
import type { ItemHacemos } from "@/types/interfaces";

const QUE_HACEMOS = await useSanityClient().fetch(
  `*[_type == "quehacemos"]  | order(title desc)`
);
---

<div
  id="que-hacemos"
  class="relative flex items-center justify-center w-full overflow-hidden"
>
  <div
    class="relative QueHacemosGrid w-full z-10 grid max-w-7xl gap-12 py-12 mx-auto sm:grid-cols-2 px-3 md:grid-cols-3 lg:grid-cols-4"
  >
    {
      QUE_HACEMOS.map((post: ItemHacemos) => (
        <div class="animate__fadeIn relative animate__animated animate__slower ">
          <div class="w-full max-w-sm sm:max-w-full mx-auto overflow-hidden text-left align-middle transition-all transform bg-white shadow-lg hover:shadow-2xl duration-300 rounded-2xl">
            <div class="w-full pt-3 h-44 overflow-hidden relative flex patternForest justify-center items-center bg-blue-800">
              <h3 class="z-10 mb-3 flex items-end  font-sans justify-center w-full px-6 font-medium text-2xl text-center text-white">
                {post.title}
              </h3>
              <div class="absolute inset-0 bg-gradient-to-b from-blue-800 via-50% via-blue-900/80 to-indigo-900/90 z-0" />
            </div>
            <div class="flex justify-center items-center p-3 gap-3 ">
              <a href={`/que-hacemos/${post.slug?.current}`} class="btn blue">
                {" "}
                Conocé más
              </a>
            </div>
          </div>
        </div>
      ))
    }
  </div>
  <div
    class="absolute inset-0 z-0 bg-gradient-to-br from-white to-gray-300 opacity-90"
  >
  </div>
</div>


<style>
  .QueHacemosGrid a:nth-child(1) {
    animation-delay: 0.1s;
  }
  .QueHacemosGrid a:nth-child(2) {
    animation-delay: 0.2s;
  }
  .QueHacemosGrid a:nth-child(3) {
    animation-delay: 0.3s;
  }
  .QueHacemosGrid a:nth-child(4) {
    animation-delay: 0.4s;
  }
  .QueHacemosGrid a:nth-child(5) {
    animation-delay: 0.5s;
  }
  .QueHacemosGrid a:nth-child(6) {
    animation-delay: 0.6s;
  }
</style>