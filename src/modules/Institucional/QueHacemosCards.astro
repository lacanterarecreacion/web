---
import { useSanityClient } from "astro-sanity";
import type { ItemHacemos } from "@/types/interfaces";
import { urlForImage } from "@/lib/urlForImage";

const QUE_HACEMOS_HIGHLIGHT = await useSanityClient().fetch(
  `*[_type == "quehacemos"  && highlight == true] | order(title asc)`
);

const QUE_HACEMOS = await useSanityClient().fetch(
  `*[_type == "quehacemos"  && highlight == false] | order(title asc)`
);
---

<div
  id="que-hacemos"
  class="relative flex-col gap-12 flex items-center justify-center w-full overflow-hidden"
>
  <div class="bg-blue-600 w-full ">
    <div
      class="relative z-10 grid p-12 w-full gap-8 px-20 mx-auto QueHacemosGrid max-w-screen-2xl sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-4"
    >
      {
        QUE_HACEMOS_HIGHLIGHT.map((post: ItemHacemos) => (
          <div class="relative flex flex-col items-center justify-start pb-4 overflow-hidden duration-300 bg-white rounded-lg shadow item animate__fadeIn animate__animated animate__slower group hover:shadow-lg">
            <h3 class="flex flex-col relative mb-3 items-center justify-center w-full overflow-hidden h-44">
              <img
                class="object-cover w-full group-hover:scale-105 h-44 duration-300 z-0"
                src={urlForImage(post.mainImage).width(300).height(200).url()}
                alt={post.title}
              />
              <p class="w-full absolute bottom-0 left-0  right-0 !flex justify-start items-end h-20 z-10 text-xl line-clamp-2 p-4 font-sans font-bold text-left text-blue-100 group-hover:underline underline-offset-2">
                <a href={`/que-hacemos/${post.slug?.current}`}>{post.title}</a>
              </p>
              <div class="absolute inset-0 bg-gradient-to-b from-transparent via-40% via-indigo-900/50 to-indigo-950 z-0" />
            </h3>
            <p class="w-full px-4 line-clamp-3 mb-4">{post.description}</p>
            <div class="flex justify-start w-full px-4">
              <a
                href={`/que-hacemos/${post.slug?.current}`}
                class="underline text-blue-600 underline-offset-2"
              >
                Conoce más
              </a>
            </div>
          </div>
        ))
      }
    </div>
  </div>
  <h2
    class="relative z-10 font-sans text-center max-w-screen-2xl mx-auto w-full text-2xl px-6 text-gray-900 md:text-3xl"
  >
    Más acciones
  </h2>
  <div
    class="relative z-10 grid w-full gap-8 px-3 mx-auto QueHacemosGrid max-w-6xl pt-6 pb-24 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-3"
  >
    {
      QUE_HACEMOS.map((post: ItemHacemos) => (
        <div class="relative flex flex-col items-center justify-start pb-4 overflow-hidden duration-300 bg-white rounded-lg shadow item animate__fadeIn animate__animated animate__slower group hover:shadow-lg">
          <h3 class="flex flex-col relative items-center justify-center w-full overflow-hidden h-44">
            <img
              class="object-cover w-full group-hover:scale-105 h-44 duration-300 z-0"
              src={urlForImage(post.mainImage).width(300).height(200).url()}
              alt={post.title}
            />
            <div class="absolute inset-0 bg-gradient-to-b from-transparent via-40% via-emerald-900/50 to-emerald-950 z-0" />
          </h3>
          <p class="w-full flex justify-start items-end z-10 text-base p-4 font-sans font-bold text-left group-hover:underline underline-offset-2">
            <a href={`/que-hacemos/${post.slug?.current}`}>{post.title}</a>
          </p>
          <p class="w-full px-4 line-clamp-3">{post.description}</p>
          <div class="flex justify-start w-full p-4">
            <a
              href={`/que-hacemos/${post.slug?.current}`}
              class="underline text-yellow-600 underline-offset-2"
            >
              Conoce más
            </a>
          </div>
        </div>
      ))
    }
  </div>
  <div
    class="absolute inset-0 z-0 bg-gradient-to-br from-white to-gray-300 opacity-90"
  >
  </div>
</div>

<style>
  .QueHacemosGrid .item:nth-child(1) {
    animation-delay: 0.1s;
  }
  .QueHacemosGrid .item:nth-child(2) {
    animation-delay: 0.2s;
  }
  .QueHacemosGrid .item:nth-child(3) {
    animation-delay: 0.3s;
  }
  .QueHacemosGrid .item:nth-child(4) {
    animation-delay: 0.4s;
  }
  .QueHacemosGrid .item:nth-child(5) {
    animation-delay: 0.5s;
  }
  .QueHacemosGrid .item:nth-child(6) {
    animation-delay: 0.6s;
  }
  .QueHacemosGrid .item:nth-child(7) {
    animation-delay: 0.7s;
  }
  .QueHacemosGrid .item:nth-child(8) {
    animation-delay: 0.8s;
  }
</style>
